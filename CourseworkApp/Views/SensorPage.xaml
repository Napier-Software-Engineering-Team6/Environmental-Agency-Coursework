<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CourseworkApp.Views.SensorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:CourseworkApp.ViewModels"
    Title="Sensor Status">

    <!--
        @brief View that displays a list of sensor data.
        @remarks Uses MVVM with SensorViewModel as the binding context.
        @author Daniel
        @date 2025-05-01
    -->
    <ContentPage.Content>
        <RefreshView
            Command="{Binding RefreshSensorsCommand}"
            IsRefreshing="{Binding IsBusy}">

            <StackLayout>

                <!--
                    @brief Button allowing users to manually trigger a refresh of sensor data.
                -->
                <Button
                    Text="Refresh Sensors"
                    Command="{Binding RefreshSensorsCommand}"
                    BackgroundColor="DarkSlateBlue"
                    TextColor="White"
                    CornerRadius="10"
                    HorizontalOptions="Center" />

                <!--
                    @brief Message shown when there are no sensors in the collection.
                -->
                <Label Text="No sensor data available."
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Gray"
                       FontAttributes="Italic"
                       IsVisible="{Binding HasNoSensors}" />

                <!--
                    @brief Displays each sensor inside a styled frame.
                -->
                <CollectionView ItemsSource="{Binding Sensors}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray" BackgroundColor="#1C1C1C" CornerRadius="10" Margin="5">
                                <StackLayout Padding="10">

                                    <!-- Sensor Name -->
                                    <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />

                                    <!-- Sensor Location -->
                                    <Label Text="{Binding Location}" FontSize="14" TextColor="Gray" />

                                    <!-- Sensor Status with color-coded trigger -->
                                    <Label Text="{Binding Status}" FontSize="14">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Active">
                                                <Setter Property="TextColor" Value="Green" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Inactive">
                                                <Setter Property="TextColor" Value="Orange" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Malfunction">
                                                <Setter Property="TextColor" Value="Red" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>

                                    <!-- Last Updated Timestamp -->
                                    <Label Text="{Binding LastUpdated, StringFormat='Last updated: {0:g}'}"
                                           FontSize="12"
                                           TextColor="DarkGray" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </StackLayout>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>
